<Window x:Class="EncryptionTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="暗号化・復号化ツール" Height="700" Width="900"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- タイトル -->
        <TextBlock Grid.Row="0" Text="暗号化・復号化ツール" 
                   FontSize="24" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <!-- アルゴリズム選択 -->
        <GroupBox Grid.Row="1" Header="アルゴリズム選択" FontSize="14" FontWeight="Bold" Margin="0,0,0,10">
            <StackPanel Margin="10">
                <ComboBox Name="AlgorithmComboBox" Width="200" 
                          HorizontalAlignment="Left" 
                          SelectionChanged="AlgorithmComboBox_SelectionChanged">
                    <ComboBoxItem Content="AES暗号化" Tag="AES" IsSelected="True"/>
                    <ComboBoxItem Content="DES暗号化" Tag="DES"/>
                    <ComboBoxItem Content="TripleDES暗号化" Tag="TripleDES"/>
                    <ComboBoxItem Content="MD5ハッシュ" Tag="MD5"/>
                    <ComboBoxItem Content="SHA256ハッシュ" Tag="SHA256"/>
                    <ComboBoxItem Content="SHA512ハッシュ" Tag="SHA512"/>
                    <ComboBoxItem Content="Base64エンコード" Tag="Base64"/>
                </ComboBox>
            </StackPanel>
        </GroupBox>

        <!-- 暗号化セクション -->
        <GroupBox Grid.Row="2" Header="暗号化" FontSize="16" FontWeight="Bold">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Name="PlainTextLabel" Text="平文を入力してください：" Margin="0,0,0,5"/>
                <TextBox Grid.Row="1" Name="PlainTextBox" 
                         TextWrapping="Wrap" AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"
                         Margin="0,0,0,10"/>

                <Button Grid.Row="2" Name="EncryptButton" Content="暗号化"
                        Width="100" Height="30" 
                        HorizontalAlignment="Center"
                        Click="EncryptButton_Click" Margin="0,0,0,10"/>

                <TextBlock Grid.Row="3" Name="EncryptedTextLabel" Text="暗号化結果：" Margin="0,0,0,5"/>
                <TextBox Grid.Row="4" Name="EncryptedTextBox" 
                         TextWrapping="Wrap" IsReadOnly="True"
                         VerticalScrollBarVisibility="Auto"
                         Background="LightGray"/>
            </Grid>
        </GroupBox>

        <!-- 区切り線 -->
        <Separator Grid.Row="3" Margin="0,10"/>

        <!-- 復号化セクション -->
        <GroupBox Grid.Row="4" Name="DecryptionGroupBox" Header="復号化" FontSize="16" FontWeight="Bold">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Name="CipherTextLabel" Text="暗号文を入力してください：" Margin="0,0,0,5"/>
                <TextBox Grid.Row="1" Name="CipherTextBox" 
                         TextWrapping="Wrap" AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"
                         Margin="0,0,0,10"/>

                <Button Grid.Row="2" Name="DecryptButton" Content="復号化"
                        Width="100" Height="30" 
                        HorizontalAlignment="Center"
                        Click="DecryptButton_Click" Margin="0,0,0,10"/>

                <TextBlock Grid.Row="3" Name="DecryptedTextLabel" Text="復号化結果：" Margin="0,0,0,5"/>
                <TextBox Grid.Row="4" Name="DecryptedTextBox" 
                         TextWrapping="Wrap" IsReadOnly="True"
                         VerticalScrollBarVisibility="Auto"
                         Background="LightGray"/>
            </Grid>
        </GroupBox>

        <!-- 操作ボタン -->
        <StackPanel Grid.Row="5" Orientation="Horizontal" 
                    HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Name="ClearButton" Content="クリア" 
                    Width="80" Height="30" Margin="5"
                    Click="ClearButton_Click"/>
            <Button Name="CopyEncryptedButton" Content="暗号文をコピー" 
                    Width="120" Height="30" Margin="5"
                    Click="CopyEncryptedButton_Click"/>
            <Button Name="CopyDecryptedButton" Content="復号文をコピー" 
                    Width="120" Height="30" Margin="5"
                    Click="CopyDecryptedButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
